
<%= form_for [@athlete, @sport] do |formItem| %>
  <div class="input-group input-group-lg mb-3 ">
    <div class="input-group-prepend" >
      <span class="input-group-text"><%= formItem.label  "New Sport Options" %>
        <%= formItem.select :sportName, [ "Choose...", "Men's Diving", "Men's Swimming", "Men's Water Polo",
          "------------", "Women's Diving", "Women's Swimming",
          "Women's Water Polo" ], class: 'form_control', id: :sport_sportName  %> </span>
    </div>
  </div>
  <div class="form-group">
    <%= formItem.submit "Save", class: 'btn btn-success'  %>
  </div>
<% end %>
