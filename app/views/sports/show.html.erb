<div class="media">
  <div class="media-body">
     <div class="row">
    <div class="col-md-8">
      <h3><span class="record-data"><%= "#{ @athlete.firstName + ' ' + @athlete.middleName + ' ' + @athlete.lastName }" %></span> -
        <span class="sport-names"><%= @sport.sportName %></span> - <span class="record-data"><%= @sport.active ? "Active" : "Inactive" %></span></h3>

    </div>
    <div class="col-md-4">
      <h3>
        <%= link_to "Edit Sport", edit_athlete_sport_path(@sport), class: 'btn btn-success' %>
        <% if !@sport.startSportData?  %>  
          <%= link_to "Delete Sport", [@sport.athlete, @sport], method: :delete,
            class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this sport?'} %>
        <% end %>
      </h3>
    </div>
  </div>
</div>
</div>
