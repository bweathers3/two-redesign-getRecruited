
<%= form_for [@sport.athlete, @sport] do |formItem| %>

  <div>
    <div class="checkbox">
      <label>
      <h4 class="col-md-2 closed-to-view"><%= formItem.check_box :active, class: 'checkbox inline' %>
      <%= "#{ "   " + "Active"  }" %></h4>
      <h4 class="col-md-10 record-data"><%= "#{ "Your Sports must be 'Active' to be viewed by Coaches" }" %></h4>
      </label>
    </div>
  </div>

  <div class="col-md-12">
      <div class="media">
         <div class="media-body">

           <% if  @sport.sportName === "Men's Diving" || @sport.sportName === "Women's Diving" %>
             <h3 class="col-md-12 record-division"><%= "#{ 'Best Optional Diving Scores:' }"%></h3>
             <h1> </h1>
                <%= formItem.fields_for :diving do |divingForm| %>
                  <%= render partial: 'divings/editDiving', locals: { divingForm: divingForm } %>
                <% end %>
           <% elsif @sport.sportName === "Men's Swimming" || @sport.sportName === "Women's Swimming" %>
             <h3 class="col-md-12 record-division"><%= "#{ 'Best Times:' }"%></h3>
             <h1> </h1>
                <%= formItem.fields_for :swimming do |swimmingForm| %>
                  <%= render partial: 'swimmings/editSwimming', locals: { swimmingForm: swimmingForm } %>
                <% end %>
           <% elsif @sport.sportName === "Men's Water Polo" || @sport.sportName === "Women's Water Polo" %>
             <h3 class="col-md-12 record-division"><%= "#{ 'Water Polo Information:' }"%></h3>
             <h1> </h1>
                <%= formItem.fields_for :waterpolo do |waterpoloForm| %>
                  <%= render partial: 'waterpolos/editWaterpolo', locals: { waterpoloForm: waterpoloForm } %>
                <% end %>

           <% else %>

           <% end %>

         </div>
      </div>
  </div>

  <div class="form-group col-md-12">
    <br/>
    <h5 class="col-md-12 record-title"><%= " " %></h5>
    <%= formItem.submit "Save", class: 'btn btn-success'  %>
  </div>

<% end %>
