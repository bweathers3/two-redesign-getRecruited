<div class="media">
  <div class="media-body">
     <div class="row">
        <div class="col-md-12">
          <h3><span class="record-data"><%= "#{ @sport.athlete.firstName + ' ' + @sport.athlete.middleName + ' ' + @sport.athlete.lastName }" %></span> -
            <span class="sport-names"><%= @sport.sportName %></span> - <span class="record-data"><%= @sport.active ? "Active" : "Inactive" %></span></h3>
        </div>
        <div class="col-md-12">
          <h3>
              <h3><%= "#{ "testing page"}" %></h3>
          </h3>
        </div>

        <%= form_with model: @sport.myteams, url: update_schools_sport_path, method: :put do |form| %>

          <div class="col-md-12">

               <h1> </h1>
               <h3 class="record-division">School Choices</h3>
               <div class="media">
                  <div class="media-body">
                    <div class="col-md-12 record-data"><h4 class="record-division"> <%= "#{ "Junior College"  }" %> </h4>

                         <% @sport.myteams.each do |item| %>

                            <div class="form-group">
                              <h5 class="record-data"><%= form.check_box :public, {class: 'form-control'}, checked_value = true, unchecked_value = false  %>
                              <%= "#{ "   " + item.collegeName }" %></h5>
                            </div>

                        <% end %>


                    </div>
                  </div>
               </div>
            </div>


          <div class="form-group col-md-12">
            <br/><br/><br/>
            <h5 class="col-md-12 record-title"><%= " " %></h5>
            <%= form.submit "Save", class: 'btn btn-success'  %>
          </div>
          <% end %>
