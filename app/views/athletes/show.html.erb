
<div class="col-md-8">
  <h3><%= "#{ @athlete.firstName + ' ' + @athlete.middleName + ' ' + @athlete.lastName }" %> - <%= @athlete.active ? "Active" : "Inactive" %></h3>
</div>

<div class="col-md-4">
  <br />
  <%= link_to "Edit", edit_athlete_path(@athlete), class: 'btn btn-success' %>
  <%= link_to "Add A Sport", new_athlete_sport_path(@athlete), class: 'btn btn-success' %>
  <%= link_to "Delete Athlete", @athlete, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this athlete?'} %>
</div>

<div class="col-md-7">
  <% @athlete.preferredName.nil?  ?  @athlete.preferredName = "None" : @athlete.preferredName %>
  <h5 class="col-md-5 record-title"><%= "#{ 'Preferred Name:' }"%></h5> <h5 class="col-md-7 record-data"><%= "#{ @athlete.preferredName  }"  %></h5>
  <h5 class="col-md-5 record-title"><%= "#{ 'Planning to Start School In:' }"%></h5> <h5 class="col-md-7 record-data"><%= "#{ @athlete.yearStartingSchool  }" %></h5>
</div>

